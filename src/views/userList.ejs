<!-- views/userList.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User List</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <div class="user-container">
      <div><h1>All Users</h1></div>

      <div id="userList">
        <% users.forEach(function(user) { %>
        <div class="card user-info" style="width: 18rem">
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Name: <%= user.name %></li>
            <li class="list-group-item">Email: <%= user.email %></li>
            <li class="list-group-item">Age: <%= user.age %></li>
            <li class="list-group-item">City: <%= user.city %></li>
            <li class="list-group-item">Zip Code: <%= user.zipCode %></li>
            <li class="list-group-item">
              <a href="/worko/users/<%= user._id %>"
                ><button class="btn btn-primary">Show User</button></a
              >
            </li>
            <li class="list-group-item">
              <a href="/worko/users/<%= user._id %>/edit"
                ><button class="btn btn-primary">Edit</button></a
              >
            </li>
            <li class="list-group-item">
              <form
                action="/worko/users/<%= user._id %>?_method=DELETE"
                method="POST"
              >
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </li>
          </ul>
        </div>
        <% }); %>
      </div>
    </div>
    <a href="/"><button class="btn btn-secondary">Return to Home</button></a>

    <script src="/script.js"></script>
  </body>
</html>
